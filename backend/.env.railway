# FixMyRV Railway Production Environment Template
# These variables are automatically configured by Railway
# Copy relevant sections to your Railway environment variables

# Database (Railway Managed PostgreSQL)
DB_TYPE=postgres
DB_HOST=${{Postgres.POSTGRES_HOST}}
DB_PORT=${{Postgres.POSTGRES_PORT}}
DB_USER=${{Postgres.POSTGRES_USER}}
DB_PASSWORD=${{Postgres.POSTGRES_PASSWORD}}
DB_NAME=${{Postgres.POSTGRES_DB}}

# Application Configuration
NODE_ENV=production
PORT=${{PORT}}

# JWT Configuration (Set these in Railway dashboard)
JWT_SECRET=your-production-jwt-secret-min-32-chars
REFRESH_TOKEN_SECRET=your-production-refresh-secret-min-32-chars

# Application URLs (Railway auto-generates these)
FRONTEND_URL=https://${{RAILWAY_PUBLIC_DOMAIN}}
BACKEND_API_URL=https://${{RAILWAY_PUBLIC_DOMAIN}}/api/v1
BACKEND_BASE_URL=https://${{RAILWAY_PUBLIC_DOMAIN}}

# Mail Configuration (Production SMTP)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=your-smtp-password
MAIL_FROM_ADDRESS=noreply@your-domain.com

# OpenAI Configuration (Required)
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPEN_AI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_API_KEY=your-openai-api-key

# Stripe Configuration (Production)
STRIPE_SECRET_KEY=sk_live_your-stripe-live-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-live-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Twilio Configuration (Production)
TWILIO_ACCOUNT_SID=your-twilio-production-sid
TWILIO_AUTH_TOKEN=your-twilio-production-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Google Drive Integration
GOOGLE_REDIRECT_URI=https://${{RAILWAY_PUBLIC_DOMAIN}}/api/v1/content/google-drive/callback

# Railway Specific
RAILWAY_ENVIRONMENT=production
